<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Guia_Curso_Etec.View.Pages.Meios_Contato"
             Title="Tela para Contato"
             Style="{ StaticResource Tema_Principal }">
    
    <ContentPage.Content>

        <StackLayout VerticalOptions="Center">

            <ScrollView>

                <StackLayout Spacing="20" Padding="20">

                    <Label Text="Meios de Contato:"
                           TextColor="#E11C23"
                           Style="{ StaticResource Titulo }"/>

                    <Grid RowSpacing="20" ColumnSpacing="10">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>

                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>

                        <ImageButton x:Name="imgbtn_facebook" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="0"
                                     Clicked="imgbtn_facebook_Clicked"/>

                        <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="0">

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="Perfil: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="Etec Joaquim Ferreira Do Amaral."/>

                                    </FormattedString>
                                    
                                </Label.FormattedText>
                                
                            </Label>

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="Página: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="Etec Jau."/>

                                    </FormattedString>
                                    
                                </Label.FormattedText>
                                
                            </Label>

                        </StackLayout>

                        <ImageButton x:Name="imgbtn_instagram" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="1"
                                     Clicked="imgbtn_instagram_Clicked"/>

                        <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="1">

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="Perfil: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="etecjau."/>

                                    </FormattedString>

                                </Label.FormattedText>

                            </Label>

                        </StackLayout>

                        <ImageButton x:Name="imgbtn_telefone" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="2"
                                     Clicked="imgbtn_telefone_Clicked"/>

                        <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="2">

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="Telefone: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="(14) 3622-3566."/>

                                    </FormattedString>

                                </Label.FormattedText>

                            </Label>

                        </StackLayout>

                        <ImageButton x:Name="imgbtn_email" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="3"
                                     Clicked="imgbtn_email_Clicked"/>

                        <Label Text="Clique no ícone para mais informações."
                               VerticalTextAlignment="Center"
                               Grid.Column="1" Grid.Row="3"
                               Style="{ StaticResource Texto }"/>

                        <ImageButton x:Name="imgbtn_site" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="4"
                                     Clicked="imgbtn_site_Clicked"/>

                        <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="4">

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="Site: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="etecjau.com.br"/>

                                    </FormattedString>

                                </Label.FormattedText>

                            </Label>

                        </StackLayout>

                        <ImageButton x:Name="imgbtn_whatsapp" Aspect="AspectFill"
                                     Grid.Column="0" Grid.Row="5"
                                     Clicked="imgbtn_whatsapp_Clicked"/>

                        <StackLayout VerticalOptions="Center" Grid.Column="1" Grid.Row="5">

                            <Label Style="{ StaticResource Texto }">

                                <Label.FormattedText>

                                    <FormattedString>

                                        <Span Text="WhatsApp: " Style="{ StaticResource Texto_Destacado }"/>
                                        <Span Text="+55 (14) 99679-4615"/>

                                    </FormattedString>

                                </Label.FormattedText>

                            </Label>

                        </StackLayout>

                    </Grid>

                    <Label Text="☝ Para facilitar, clique nos ícones."
                           TextColor="#FFFFFF"
                           FontSize="25"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0"/>

                </StackLayout>

            </ScrollView>

        </StackLayout>

    </ContentPage.Content>
    
</ContentPage>