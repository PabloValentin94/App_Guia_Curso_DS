<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Guia_Curso_Etec.View.Pages.Cursos.DS.DS_Habilidades"
             Style="{ StaticResource Tema_DS }">
    
    <ContentPage.Content>

        <ScrollView>

            <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">

                <Frame BackgroundColor="#8B0000"
                           CornerRadius="20"
                           BorderColor="#FFFFFF">

                    <StackLayout Spacing="0">

                        <Label Text="Habilidades:"
                               TextColor="#FFFFFF"
                               FontAttributes="Bold"
                               FontSize="25"
                               HorizontalTextAlignment="Center"
                               BackgroundColor="#363636"
                               Padding="5"/>

                        <Label Text="{ Binding Habilidades }"
                               TextColor="#FFFFFF"
                               FontSize="20"
                               HorizontalTextAlignment="Start"
                               Padding="10"/>

                    </StackLayout>

                </Frame>

            </StackLayout>

        </ScrollView>

    </ContentPage.Content>
    
</ContentPage>