                            </StackLayout>
                            -->

                        </StackLayout>

                    </ScrollView>

                </Grid>

            </ContentPage.Content>

        </ContentPage>

    </MasterDetailPage.Master>
    
    <!-- Parte destinada à página de fundo. -->

    <MasterDetailPage.Detail>

        <NavigationPage>
            
            
            
        </NavigationPage>
        
